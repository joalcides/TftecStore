@model Produto
<div class="container">
<div class="row">
<div class="card">
     <div class="text-center">
         <img src="@Model.ImageUrl" class="img-fluid" asp-append-version="true" alt="Produto">
     </div>
     <div class="card-block">
        <h2 class="card-title">@Model.NomeProduto</h2>
        <p class="card-text"><h5>@Model.DescricaoDetalhada</h5></p>
         <p class="btn btn-group align-content-lg-end" >
            <a asp-controller="Produto" asp-action="List" 
               class="btn btn-outline-info">Ver todos os Produtos</a>
            <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra" 
            asp-action="AdicionarItemNoCarrinhoCompra" asp-route-ProdutoId="@Model.ProdutoId"> 
            Adicionar @Model.NomeProduto ao carrinho
            </a>
         </p>
     </div>
</div>
</div>
</div>